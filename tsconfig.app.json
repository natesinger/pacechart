{
  "compilerOptions": {
    // --- FIXES FOR COMPOSITE PROJECT ---
    "composite": true,
    "declaration": true,

    // --- Original Settings ---
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // REMOVED: Conflicts with build process.
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // REMOVED: Conflicts with composite projects.
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // FIX: Added all source directories to the include path so TypeScript can find all components and utilities.
  "include": ["src/react-app", "src/pages", "src/components", "src/hooks", "src/lib"]
}
